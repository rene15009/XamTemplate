                    <Label Text="{Binding User.FullName}" Style="{StaticResource LabelMenu}"  />
                    <Label Text="{Binding User.Email}" Style="{StaticResource LabelMenu}" FontSize="Small" IsVisible="{Binding User.Email, Converter={converters:EmptyConverter}}"/>
                </StackLayout>
                <StackLayout Orientation="Vertical" IsVisible="{Binding VisibleNoAnonymous, Converter= {converters:InverterBooleanConverter}}" VerticalOptions="Center">
                    <Label Text="{Binding User.FullName}" Style="{StaticResource LabelMenu}" HorizontalOptions="Center" VerticalOptions="Center" />
                </StackLayout>-->
            </StackLayout>

            <!--<StackLayout IsVisible="{Binding VisibleNoAnonymous, Converter= {c:InverterBooleanConverter}}" Orientation="Horizontal" HeightRequest="45" >
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Loging_click}"/>
                </StackLayout.GestureRecognizers>
                <Image Source="Identificarse.png"  HorizontalOptions="Start"   />
                <Label Text="{i18n:Translate LblLoginMenu}" Style="{StaticResource LabelMenu}" />
            </StackLayout>

            <BoxView Margin="60, 0, 0,0" IsVisible="{Binding IsLogging, Converter= {c:InverterBooleanConverter}}" Style="{StaticResource SepatorLineMenu}"/>

            <StackLayout IsVisible="{Binding VisibleNoAnonymous}" Orientation="Horizontal" HeightRequest="45" >
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Logout_click}"/>
                </StackLayout.GestureRecognizers>
                <Image Source="PecharSesion.png"  HorizontalOptions="Start"   />
                <Label Margin="25, 0,0,0" Text="{i18n:Translate LblLogout}" Style="{StaticResource LabelMenu}" />
            </StackLayout>-->


            <StackLayout Orientation="Horizontal" HeightRequest="45" >
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding PageOne_click}"/>
                </StackLayout.GestureRecognizers>
                <Image Source=""  HorizontalOptions="Start"   />
                <Label Text="Page One" Style="{StaticResource LabelMenu}" />
            </StackLayout>

            <BoxView Margin="60, 0, 0, 0" Style="{StaticResource SepatorLineMenu}"/>
            

            <StackLayout Orientation="Horizontal" HeightRequest="45">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding PageTwo_click}"/>
                </StackLayout.GestureRecognizers>
                <Image Source=""  HorizontalOptions="Start"   />
                <Label Text="Page Two" Style="{StaticResource LabelMenu}" />
            </StackLayout>

            <BoxView  Margin="60, 0, 0,0" Style="{StaticResource SepatorLineMenu}" />


          <StackLayout  Orientation="Horizontal" HeightRequest="45"  >
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Configuration_click}"/>
                </StackLayout.GestureRecognizers>
                <Image Source=""  HorizontalOptions="Start"   />
                <Label Text="Configuration" Style="{StaticResource LabelMenu}" />
            </StackLayout>

            <BoxView Margin="60, 0, 0,0" Style="{StaticResource SepatorLineMenu}"/>


            <StackLayout Orientation="Horizontal" HeightRequest="45" >
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Exit_click}"/>
                </StackLayout.GestureRecognizers>
                <Image Source=""  HorizontalOptions="Start"   />
                <Label Text="Exit" Style="{StaticResource LabelMenu}" />
            </StackLayout>

            <BoxView Margin="60, 0, 0,0" Style="{StaticResource SepatorLineMenu}"/>

           
        </StackLayout>
    </ScrollView>
</ContentPage>